<%= form_with(model: question, local: true, :class => 'grey-border doubt-form') do |form| %>
  <% if question.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(question.errors.count, "error") %> prohibited this question from being saved:</h2>

      <ul>
        <% question.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :title %>
    <%= form.text_field(:title, {:class => 'form-control form-field', :placeholder => 'Title'}) %>
  </div>

  <div class="field">
    <%= form.label :description %>
    <%= form.text_field(:description, {:class => 'form-control form-field', :placeholder => 'Description'}) %>
  </div>

  <div class="actions">
    <%= form.submit "Ask Doubt",({:class => 'btn btn-primary text-light float-right doubt-btn'}) %>
  </div>
<% end %>
